<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar_empty_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    app:elevation="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:contentInsetEnd="@dimen/margin_8"
        android:contentInsetLeft="@dimen/margin_16"
        android:contentInsetRight="@dimen/margin_8"
        android:contentInsetStart="@dimen/margin_16"
        app:contentInsetEnd="@dimen/margin_8"
        app:contentInsetLeft="@dimen/margin_16"
        app:contentInsetRight="@dimen/margin_8"
        app:contentInsetStart="@dimen/margin_16"
        app:theme="@style/NoActionBarShadowTheme">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_update"
            android:paddingRight="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_8"
            android:layout_gravity="end"
            android:visibility="gone"/>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>